set realname = "Felix Schlitter"
set folder = "~/mail/felix"
set from = "felixschlitter@gmail.com"
set smtp_url = "smtp://felixschlitter@gmail.com@smtp.gmail.com:587/"
set postponed = "+Drafts"
set trash = "+Trash"
set record = "+Sent"
set virtual_spoolfile = no
set smtp_authenticators = "oauthbearer"
set smtp_oauth_refresh_command = "gmail-oauth2-token felix"
set spoolfile = 'Inbox'

unmailboxes *
unvirtual-mailboxes *
named-mailboxes "Inbox" '=INBOX'
virtual-mailboxes "UNREAD " "notmuch:///home/felix/mail/felix?query=folder:INBOX tag:unread"
named-mailboxes "Sent" '=Sent'
named-mailboxes "Drafts" '=Drafts'
