loginShell: true

*font: *-fixed-*-*-*-*-*
*faceName: DejaVu Sans Mono:size=10:antialias=true

Xft.antialias: true
Xft.hinting:   true
Xft.rgba:      rgb
Xft.hintstyle: hintfull

Emacs.menuBar: 0
Emacs.toolBar: 0
Emacs.verticalScrollBars: off
Emacs.FontBackend: xft,x
Emacs.font: DejaVu Sans Mono:size=15:antialias=true

! High-resolution specific settings
#ifdef IS_4K
Xft.dpi: 220
#endif

! Dracula Xresources palette (Modified)
*.foreground: lightblue
*.background: black
*.color0:     #000000
*.color8:     #4D4D4D
*.color1:     #FF5555
*.color9:     #FF6E67
*.color2:     #50FA7B
*.color10:    #5AF78E
*.color3:     #F1FA8C
*.color11:    #F4F99D
*.color4:     #BD93F9
*.color12:    #CAA9FA
*.color5:     #FF79C6
*.color13:    #FF92D0
*.color6:     #8BE9FD
*.color14:    #9AEDFE
*.color7:     #BFBFBF
*.color15:    #E6E6E6

!-------------------------------------------------------------------------------
! XTerm configuration
!-------------------------------------------------------------------------------

xterm*BorderWidth: 8

xterm*font: *-fixed-*-*-*-*-*
xterm*faceName: DejaVu Sans Mono:size=10:antialias=true
xterm*termName: xterm-256color
xterm*scrollBar: false
xterm*internalBorder: 0
xterm*rightScrollBar: false
xterm*title: XTerm
xterm*iconName: XTerm
xterm*saveLines: 50000
xterm*jumpScroll: true
xterm*scrollTtyOutput: false
xterm*scrollKey: true
xterm*alwaysUseMods: true
xterm*metaSendsEscape: true
xterm*utf8Title: true
Xterm*selectToClipboard: true
xterm*visualbell: true
xterm*bellIsUrgent: true
xterm.vt100.bellIsUrgent: true
xterm*vt100.Translations: #override \
    Ctrl Shift <Key>V: insert-selection(CLIPBOARD) \n\
    Ctrl Shift <Key>C: copy-selection(CLIPBOARD)
