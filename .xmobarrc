Config
  { font = "xft:Deja Vu Sans Mono-10"
  , border = NoBorder
  , bgColor = "black"
  , fgColor = "grey"
  , position = TopW L 100
  , lowerOnStart = True
  , hideOnStart = False
  , overrideRedirect = False
  , persistent = True
  , allDesktops = True
  , commands =
      [ Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 10
      , Run Memory ["-t","M: <usedratio>%"] 10
      , Run Swap [] 10
      , Run DateZone "%H:%M" "de_DE.UTF-8" "America/New_York" "ny-date" 10
      , Run DateZone "%H:%M" "de_DE.UTF-8" "America/Los_Angeles" "la-date" 10
      , Run DateZone "%H:%M" "de_DE.UTF-8" "Africa/Johannesburg" "sa-date" 10
      , Run DateZone "%H:%M" "de_DE.UTF-8" "America/Menominee" "nf-date" 10
      , Run Date "%a %b %_d %Y %H:%M:%S" "date" 10
      , Run Battery
          [ "--template" , "<acstatus>"
          , "--Low"      , "10" -- units: %
          , "--High"     , "80" -- units: %
          , "--low"      , "red"
          , "--normal"   , "orange"
          , "--high"     , "green"
          , "--"
          , "-o", "<left>% (<timeleft>)"
          , "-O", "<fc=#dAA520>Charging</fc>"
          ] 50
      , Run StdinReader
      , Run Com "sh" ["-c", "~/projects/dotfiles/xmobar/nw"] "nw" 5
      , Run Com "sh" ["-c", "notmuch --config ~/.notmuch.felix count folder:INBOX tag:unread"] "mail:felix" 5
      , Run Com "sh" ["-c", "notmuch --config ~/.notmuch.sylo count folder:INBOX tag:unread"] "mail:sylo" 5
      , Run Volume "default" "Master" [ "--template", "Vol: <volume>% <status>" ] 5
      , Run Brightness [ "--template", "B: <percent>%", "--", "--device", "intel_backlight"] 5
      ]
  , sepChar = "%"
  , alignSep = "}{"
  , template = "%StdinReader% | %battery% | %cpu% | %memory% | %bright% | %nw% }{ âœ‰ felix: %mail:felix%, sylo: %mail:sylo% | NF:%nf-date%/SA:%sa-date%/NY:%ny-date%/LA:%la-date% | <fc=#ee8a00>%date%</fc> | %default:Master%"
  }
