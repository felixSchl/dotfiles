Config
  { font = "xft:Deja Vu Sans Mono-10"
  , borderColor = "black"
  , border = TopB
  , bgColor = "black"
  , fgColor = "grey"
  , position = TopW L 100
  , commands =
      [ Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 10
      , Run Memory ["-t","Mem: <usedratio>%"] 10
      , Run Swap [] 10
      , Run Date "%a %b %_d %Y %H:%M:%S" "date" 10
      , Run Battery
          [ "--template" , "<acstatus>"
          , "--Low"      , "10" -- units: %
          , "--High"     , "80" -- units: %
          , "--low"      , "darkred"
          , "--normal"   , "darkorange"
          , "--high"     , "darkgreen"
          , "--"
          , "-o", "<left>% (<timeleft>)"
          , "-O", "<fc=#dAA520>Charging</fc>"
          ] 50
      ]
  , sepChar = "%"
  , alignSep = "}{"
    -- note: the trailing whitespace allows us to draw 'trayer' over the top.
    --       there's appearently no built-in way to achieve a smooth
    --       co-existence between 'xmobar' and 'trayer', but the following,
    --       ingenius hack makes it work nicely:
    --  see: https://github.com/jfly/dotfiles/commit/1ee867c4b77d03274ea06219af4adabd463b4d13
  , template = "%battery% | %cpu% | %memory%}{<fc=#ee9a00>%date%</fc> |   "
  }
